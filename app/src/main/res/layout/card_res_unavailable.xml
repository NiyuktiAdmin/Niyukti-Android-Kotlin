<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Data not available"
        android:layout_marginHorizontal="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/res_unavailable" />

    <TextView
        android:id="@+id/card_res_unavail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Resource Not Available"
        android:textColor="@color/text_black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1000dp">

        <TextView
            android:id="@+id/card_res_unavail_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/login_gold"
            android:gravity="center"
            android:padding="8dp"
            android:text="Purchase"
            android:textColor="@color/pure_black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

</LinearLayout>