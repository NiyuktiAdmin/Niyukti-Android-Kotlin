<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".test_conducting.TestQuestionMenuActivity">

    <!-- Top Bar - Similar to TestMainActivity -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/test_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mock Test"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp" />

            <ImageView
                android:id="@+id/timer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Timer Icon"
                app:srcCompat="@drawable/baseline_alarm_24"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/total_time_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:45:22"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Subjects RecyclerView (Moved to top) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjects_rv_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/filter_tag_component" />

    <!-- Single ScrollView containing everything below subjects RecyclerView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/subjects_rv_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Status Indicators - Refactored to LinearLayout -->
            <LinearLayout
                android:id="@+id/status_indicators_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- First row: Answered and Not Answered -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Answered -->
                    <TextView
                        android:id="@+id/answered_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_green_bg"
                        android:gravity="center"
                        android:text="23"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/answered_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Answered"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />

                    <!-- Not Answered -->
                    <TextView
                        android:id="@+id/not_answered_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/rounded_red_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/not_answered_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not Answered"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Second row: Not Visited and Mark for Review -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Not Visited -->
                    <TextView
                        android:id="@+id/not_visited_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_grey_bg"
                        android:gravity="center"
                        android:text="74"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/not_visited_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not Visited"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />

                    <!-- Mark for Review -->
                    <TextView
                        android:id="@+id/mark_review_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/rounded_purple_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mark_review_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mark for Review"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Third row: Mark for Review and Answered -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/mark_review_answered_count"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_dark_green_with_dot_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mark_review_answered_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mark for Review and Answered"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mock_test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Constable Mock Test"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:padding="16dp"
                android:background="@android:color/white" />

            <!-- This LinearLayout will contain dynamically added subject headers and GridLayouts -->
            <LinearLayout
                android:id="@+id/question_grid_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Dynamic content will be inserted here by TestQuestionMenuActivity.java -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
