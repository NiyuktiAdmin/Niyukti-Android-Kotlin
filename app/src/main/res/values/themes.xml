<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NiyuktiKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFEF6</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFF59D</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorPrimaryContainer">#FFF176</item>
        <item name="colorOnPrimaryContainer">#000000</item>
        <item name="android:statusBarColor">#FFFEF6</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSecondaryContainer">#FFDC2F</item>
        <item name="colorOnSecondaryContainer">#000000</item>
    </style>

    <style name="Theme.NiyuktiKotlin" parent="Base.Theme.NiyuktiKotlin" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="MainMenuDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationSlideFromLeft</item>
    </style>

    <style name="QuestionNumberButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/rounded_grey_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="QuestionNumberButton.Green">
        <item name="android:background">@drawable/rounded_green_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionNumberButton.Red">
        <item name="android:background">@drawable/rounded_red_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionNumberButton.Purple">
        <item name="android:background">@drawable/rounded_purple_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionNumberButton.DarkGreen">
        <item name="android:background">@drawable/rounded_dark_green_with_dot_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionNumberButton.Grey">
        <item name="android:background">@drawable/rounded_grey_bg</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DialogAnimationSlideFromLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

</resources>